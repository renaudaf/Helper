<div class="container">
  <div class="editing-title">
    <h1>Edit your project</h1>
  </div>
  <div class="infocard">
    <%= simple_form_for(@project) do |f| %>
      <div class="edit-title">
        <h4>Name of your project:</h4>
        <%= f.input :title, label: false %>
      </div>
      <div class="edit-title">
        <h4>Description:</h4>
        <%= f.input :description, label: false %>
      </div>
      <div class="edit-title">
        <h4>Address:</h4>
        <%= f.input :address, label: false %>
      </div>
      <div class="edit-title">
        <h4>Select Type:</h4>
        <%= f.input :tags, collection: @tags, input_html: { multiple: true }, hint: "Maximum 3", label: false %>
      </div>
      <div class="edit-title">
        <h4>Add related images:</h4>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
      </div>
      <div class="edit-title">
        <h4><label for="project[measurements][][name]">Measurements:</label></h4>
        <p><em>You can refer to the images you attached to the file in orfer to give more informations to your potential helper</em></p>
      </div>
      <div class="add-measurements">
        <% @project.measurements.each do |measurement| %>
            <input class="edit-measurement" name="project[measurements][][name]" type="text" value="<%=measurement["name"] %>"> <input class="edit-measurement" name="project[measurements][][dimension]" value="<%=measurement["dimension"]%>" type="text">
        <% end %>
        <div class="add-measurements-c">
          <button id="add-measure" class="btn btn-primary mt-2">Add a measurement</button>
        </div>
      </div>
      <div class="submit-edit">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
